{
    "name": "iampersistent/ledger",
    "type": "library",
    "description": "A ledger of financial transactions",
    "keywords": ["ledger"],
    "license": "MIT",
    "require": {
        "moneyphp/money": "^4.0.5",
        "php": "^8.1",
        "psr/container": "^1.1.2 || ^2.0"
    },
    "require-dev": {
        "codeception/codeception": "^2.5",
        "doctrine/dbal": "^2.9@dev",
        "ext-pdo": "*",
        "ext-json": "*",
        "robmorgan/phinx": "^0.15.4"
    },
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "IamPersistent\\Ledger\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Fixture\\": "tests/_support/Fixture",
            "Tests\\Functional\\": "tests/functional",
            "Tests\\Unit\\": "tests/unit"
        }
    }
}
